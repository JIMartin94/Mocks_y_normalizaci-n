<!DOCTYPE html>
<html>
  <head>
    <title>mostrar productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/main.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12">
         

    <!-- Lista de productos -->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h2>Lista de Productos</h2>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody id="products">
                         
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <div class="container">
      <div class="row">
        <div class="col-12 centroMsj">
          <h2>Centro de Mensajes</h2>
          <form onsubmit="return addMessage(this)">
            <input type="email" id="mail" class="form-control"  placeholder="Aca tu mail" required>
            <input type="text" id="nombre" class="form-control"  placeholder="Aca tu nombre" required>
            <input type="text" id="apellido" class="form-control"  placeholder="Aca tu apellido" required>
            <input type="number" id="edad" class="form-control"  placeholder="Aca tu edad" required>
            <input type="text" id="alias" class="form-control"  placeholder="Aca tu alias" required>
            <input type="text" id="avatar" class="form-control"  placeholder="Aca url del avatar" required>
            <div id="messages"></div>
            <input type="text" id="texto" class="form-control"  placeholder="Escribe algo..." required>
            <input type="submit" class="btn btn-success" value="Enviar">
        </form>
      </div>
    </div>
  </div>
  </body>
</html>
